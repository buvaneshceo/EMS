<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_margin="10dp">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:rowCount="3">
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                app:cardCornerRadius="30dp"
                android:layout_gravity="fill"
                app:cardElevation="20dp">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center">
                    <ImageView
                        android:layout_width="180dp"
                        android:id="@+id/anna"
                        android:layout_height="180dp"
                        android:src="@drawable/annauniversity"></ImageView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:id="@+id/annauni"
                        android:layout_marginTop="8dp"
                        android:textSize="17sp"
                        android:text="Anna University"></TextView>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                app:cardCornerRadius="30dp"
                android:layout_gravity="fill"
                android:layout_marginLeft="29dp"
                app:cardElevation="20dp">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center">
                    <ImageView
                        android:layout_width="180dp"
                        android:id="@+id/agri"
                        android:layout_height="180dp"
                        android:src="@drawable/agri_university"></ImageView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:id="@+id/agriuni"
                        android:layout_marginTop="8dp"
                        android:textSize="17sp"
                        android:text="Agricultural University"></TextView>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                app:cardCornerRadius="30dp"
                android:layout_gravity="fill"
                android:layout_marginTop="24dp"
                app:cardElevation="20dp">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center">
                    <ImageView
                        android:layout_width="180dp"
                        android:layout_height="180dp"
                        android:id="@+id/alagappa"
                        android:src="@drawable/alagappauni"></ImageView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:id="@+id/alagappauni"
                        android:layout_marginTop="8dp"
                        android:textSize="17sp"
                        android:text="Alagappa University"></TextView>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                app:cardCornerRadius="30dp"
                android:layout_marginLeft="29dp"
                android:layout_gravity="fill"
                android:layout_marginTop="24dp"
                app:cardElevation="20dp">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center">
                    <ImageView
                        android:layout_width="180dp"
                        android:layout_height="180dp"
                        android:id="@+id/annamalai"
                        android:src="@drawable/annamalaiuni"></ImageView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:layout_marginTop="8dp"
                        android:textSize="17sp"
                        android:id="@+id/annamaluni"
                        android:text="Annamalai University"></TextView>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                app:cardCornerRadius="30dp"
                android:layout_gravity="fill"
                android:layout_marginTop="24dp"
                app:cardElevation="20dp">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center">
                    <ImageView
                        android:layout_width="180dp"
                        android:layout_height="180dp"
                        android:id="@+id/bharthi"
                        android:src="@drawable/bharthidsanuniv"></ImageView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:id="@+id/bharthiuni"
                        android:layout_marginTop="8dp"
                        android:textSize="17sp"
                        android:text="Bharathidasan University"></TextView>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                app:cardCornerRadius="30dp"
                android:layout_gravity="fill"
                android:layout_marginLeft="29dp"
                android:layout_marginTop="24dp"
                app:cardElevation="20dp">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:id="@+id/mgr"
                    android:gravity="center">
                    <ImageView
                        android:layout_width="180dp"
                        android:layout_height="180dp"
                        android:id="@+id/mgruni"
                        android:src="@drawable/mgrmedicaluniv"></ImageView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:layout_marginTop="8dp"
                        android:textSize="15sp"
                        android:text="Dr.M.G.R.Medical University"></TextView>
                </LinearLayout>
            </androidx.cardview.widget.CardView>


        </GridLayout>

    </ScrollView>


</LinearLayout>